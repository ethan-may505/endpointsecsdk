{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["header", "patch_status"],
  "properties": {
    "header": {
      "type": "object",
      "required": [
        "name",
        "timestamp",
        "time",
        "copyright",
        "version",
        "description"
      ],
      "properties": {
        "name": { "type": "string" },
        "timestamp": { "type": "integer" },
        "time": { "type": "string" },
        "copyright": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "patch_status": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "product_id",
          "product_name",
          "signature_id",
          "signature_name",
          "status",
          "last_tested",
          "platform",
          "last_known_good",
          "method_status"
        ],
        "properties": {
          "product_id": { "type": "integer" },
          "product_name": { "type": "string" },
          "signature_id": { "type": "integer" },
          "signature_name": { "type": "string" },
          "status": { "type": "string" },
          "last_tested": { "type": "string" },
          "platform": { "type": "string" },
          "last_known_good": { "type": "string" },
          "method_status": {
            "type": "object",
            "required": [ "get_latest_installer" ],
            "properties": {
              "get_latest_installer": {
                "type": "object",
                "required": [ "download_0" ],
                "properties": {
                  "download_0": {
                    "type": "object",
                    "required": [ "is_supported" ],
                    "properties": {
                      "is_supported": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
