{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "v4_vid": {
      "type": "integer",
      "minimum": 1,
      "maximum": 99999
    },
    "v4_pids": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1,
        "maximum": 99999
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "v4_signatures": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1,
        "maximum": 99999
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "kb_articles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "article_name": {
            "type": "string",
            "pattern": "^[0-9]+$"
          },
          "os_id": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "uniqueItems": true,
            "minItems": 1
          }
        },
        "required": [
          "article_name",
          "os_id"
        ],
        "additionalProperties": false
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "cve": {
      "type": "string",
      "pattern": "^CVE-[0-9]{4}-[0-9]{4,}$"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+-\\d+\\.\\d+$"
    },
    "cpe": {
      "type": "string",
      "pattern": "^cpe:/o:[^:]+:[^:]+$"
    },
    "os_type": {
      "enum": [1]
    }
  },
  "required": [
    "v4_vid",
    "v4_pids",
    "v4_signatures",
    "kb_articles",
    "cve",
    "cpe",
    "schema_version",
    "os_type"
  ],
  "additionalProperties": false
}