{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Linux vulnerability association",
  "type": "object",
  "properties": {
    "cve": {
      "description": "CVE ID",
      "type": "string",
      "pattern": "^CVE-[0-9]{4}-[0-9]{4,}$"
    },
    "os_type": {
      "type": "integer",
      "enum": [2]
    },
    "affected_os": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "os_name": {
            "type": "string",
            "pattern": "^(Alma|Amazon|Debian|Mint|Oracle|RedHat|Rocky|SLES|Ubuntu) \\d+(\\.\\d+)*$"
          },
          "os_id": {
            "type": "integer",
            "minimum": 1
          },
          "v4_vid": {
            "description": "Package manager's V4 vendor ID",
            "type": "integer",
            "minimum": 200000,
            "maximum": 299999
          },
          "v4_pids": {
            "description": "Package manager's V4 product IDs",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "integer",
              "minimum": 200000,
              "maximum": 299999
            }
          },
          "v4_signatures": {
            "description": "Package manager's V4 signature IDs",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "integer",
              "minimum": 200000,
              "maximum": 299999
            }
          },
          "affected_packages": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "package_name": {
                  "type": "string",
                  "pattern": "^\\S+$"
                },
                "ranges": {
                  "description": "Affected ranges",
                  "type": "array",
                  "minItems": 1,
                  "uniqueItems": true,
                  "items": {
                    "type": "object",
                    "properties": {
                      "start": {
                        "type": "string",
                        "minLength": 1
                      },
                      "start_except": {
                        "type": "string",
                        "minLength": 1
                      },
                      "limit": {
                        "type": "string",
                        "minLength": 1
                      },
                      "limit_except": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "additionalProperties": false,
                    "allOf": [
                      {
                        "oneOf": [
                          { "required": ["start"] },
                          { "required": ["start_except"] }
                        ]
                      },
                      {
                        "oneOf": [
                          { "required": ["limit"] },
                          { "required": ["limit_except"] }
                        ]
                      }
                    ]
                  }
                },
                "cpe" : {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "pattern": "^[c][pP][eE]:(\/?)[AHOaho]?"
                  }

                }
              },
              "additionalProperties": false,
              "required": ["package_name", "ranges"]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "os_name",
          "v4_vid",
          "v4_pids",
          "v4_signatures",
          "affected_packages"
        ]
      }
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+-\\d+\\.\\d+$"
    }
  },
  "additionalProperties": false,
  "required": ["cve", "os_type", "affected_os", "schema_version"]
}
